# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME="kphoen"
export CASE_SENSITIVE="true"

plugins=(git lein)
if [ `uname` = "Darwin" ]; then
   plugins+=(brew osx)
fi

source $ZSH/oh-my-zsh.sh

# Aliasen and environment
source ~/.zshalias
source ~/.zshenv

# Check for a .venv file. If it's there, activate it.
has_virtualenv() {
  if [ -e .venv ] && [ -z "$VIRTUAL_ENV" ]; then
    workon "$@" `cat .venv`
  fi
}
venv_cd () {
  cd "$@" && has_virtualenv
}
alias cd="venv_cd"

# Bindings for Emacs
bindkey -e

# Don't use autocorrect
unsetopt correct_all

# Extra completions
fpath=(/home/wunki/src/zsh-completions/src $fpath)

# Git flow completions
if [ -e "$HOME/src/git-flow-completion" ]; then
  source /$HOME/src/git-flow-completion/git-flow-completion.zsh
fi

# CTRL-R for backwards history search
bindkey "^r" history-incremental-search-backward

# Tricks to make ZSH faster
# Git completion
__git_files () { 
    _wanted files expl 'local files' _files 
}