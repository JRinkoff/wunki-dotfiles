# Common
alias cd..="cd .."
alias c="clear"
alias q="exit"
alias e="exit"
alias ..="cd .."
alias rh="runhaskell"
alias gvim="gvim --remote-tab-silent"
alias rmpyc="find . -name '*.pyc' | xargs rm"
alias gun="gunicorn_django --workers=2"
alias upac="source ../bin/activate && git pull origin"
alias flushdns="dscacheutil -flushcache"
alias clj="rlwrap clj"
alias redis-server="redis-server /usr/local/etc/redis.conf"

# Postgresql
alias pgstart="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pgstop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# Emacs
if [ `uname` = "Darwin" ]; then
    # Emacs
    alias emacs="/Applications/Emacs.app/Contents/MacOS/Emacs"
    
    # EmacsClient in shell
    alias em="/Applications/Emacs.app/Contents/MacOS/bin/emacsclient -t -a /Applications/Emacs.app/Contents/MacOS/Emacs -nw"
    
    # EmacsClient in windowed frame
    alias ec="/Applications/Emacs.app/Contents/MacOS/bin/emacsclient -n -c -a /Applications/Emacs.app/Contents/MacOS/Emacs"
fi

# Python servers
alias "smtpd"="python -m smtpd -n -c DebuggingServer localhost:1025"
alias "fileserver"="python -m SimpleHTTPServer"

# Django
alias rs='./manage.py runserver 127.0.0.1:8000'
alias tst='./manage.py test'

# Pypi
alias pyup='python setup.py sdist register upload'

# MongoDB
alias mongod='mongod run --config /usr/local/Cellar/mongodb/2.0.0-x86_64/mongod.conf'

# Git
alias gd='git diff | emacsclient'

# Directory bookmarks
alias cdsi='cd /Volumes/Sites/'
alias cdso='cd /Volumes/Sources/'

# PostgreSQL
alias pgstart='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pgstop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'
