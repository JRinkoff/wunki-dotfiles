# disable screensaver
stop-xscreensaver=true

# no joystick and lirc
nolirc=yes
nojoystick=yes

# subtitle fonts
fontconfig = 1
embeddedfonts = 1
subfont-autoscale = 3
subfont-osd-scale = 3
subcp = cp1254
spuaa = 4
font = "Dejavu Sans"

# ass for better font rendering
ass = 1
ass-color = FFFFFF00
ass-use-margins = 1

# default to English for subtitles
slang = en,nl
alang = en,nl

# enable color output in console
msgcolor = 1

# video output driver
vo=xv,x11

# Start in fullscreen and on top
fs=no
ontop=no

# double buffering (for subtitles)
double=yes

# drop frames nicely if necessary
framedrop=yes
hardframedrop=no

# unicode
subfont-encoding="unicode"
unicode=yes
utf8=yes