#!/usr/bin/env bash
AMIX=$(which amixer)
MUTED=`cat ${HOME}/.pulse/mute`
MAX_VOL=65536


function get_volume {
    $AMIX | egrep -i "^ *front left:" | cut -f 6 -d " " | head -n 1
}

function volume_percent {
    echo $((100*$(get_volume)/$MAX_VOL))
}

if [[ $MUTED == *true* ]]
then
    echo "Muted"
else
    echo $(volume_percent)%
fi
