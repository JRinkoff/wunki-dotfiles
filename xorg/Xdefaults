! Set the colors
#include "/home/wunki/src/wunki-dotfiles/xorg/zenburn.rxvt.colors"

Xcursor.theme: Vanilla-DMZ-AA
Xcursor.size: 36

! XFT Settings
Xft.autohint: 0
Xft.antialias: 1
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 0
Xft.dpi: 220
Xft.rgba: rgb

! RXVT Scripts
urxvt.perl-ext-common: clipboard,keyboard-select

! RXVT Clipboard
urxvt.clipboard.autocopy: true
urxvt.keysym.M-c:   perl:clipboard:copy
urxvt.keysym.M-v:   perl:clipboard:paste
urxvt.keysym.M-C-v: perl:clipboard:paste_escaped

urxvt.clipboard.copycmd:  xclip -i -selection clipboard
urxvt.clipboard.pastecmd: xclip -o -selection clipboard

! RXVT Keyboard select
urxvt.keysym.M-Escape: perl:keyboard-select:activate
urxvt.keysym.M-s:      perl:keyboard-select:search

! Urxvt fonts
urxvt.font:            xft:Fira Mono Medium:size=8,xft:Fira Mono for Powerline
urxvt.boldFont:        xft:Fira Mono Medium::bold:size=8
urxvt.italicFont:      xft:Fira Mono Medium::italic:size=8
urxvt.boldItalicFont:  xft:Fira Mono Medium::bolditalic:size=8

! Urxvt settings
urxvt.depth: 32
urxvt.jumpScroll: True
urxvt.fading: 20
urxvt.scrollBar: False
urxvt.scrollTtyOutput: False
urxvt.scrollTtyKeypress: True
urxvt.saveLines: 2000
urxvt.borderLess: False
urxvt.pointerBlank: True
urxvt.scrollWithBuffer: False
urxvt.print-pipe: cat > $HOME/rxvt.print
urxvt.termName: rxvt-256color

! Emacs
Emacs.fontBackend: xft
Emacs.menuBar: off
Emacs.toolBar: off
Emacs.verticalScrollBars: off

! Urls
urxvt.perl-ext: default,matcher
urxvt.url-launcher: chromium-continuous-bin
urxvt.matcher.button: 1
urxvt.matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
