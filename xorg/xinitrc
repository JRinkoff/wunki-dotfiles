#!/bin/env sh

# QT must be able to find my theme
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"

# X Settings
xrdb -load .Xresources
xrdb -load .Xdefaults

# Disable PC-Speaker
xset b off &

# Disable power-saving
xset -dpms

# Disable screen-saver
xset s off

# Key repeat
xset r rate 300 80

# Set the left cursor as default
xsetroot -cursor_name left_ptr

# Hide the mouse cursor
unclutter -idle 3 &

# Set background
feh --bg-fill ~/pictures/wallpapers/orange-woods.jpg

# Start rvxt-unicode server
urxvtd -o -q -f &

# Thunar
thunar --daemon &

# SSH agent
eval `ssh-agent`

# Emacs
emacs --daemon &

#
# Start window manager
#
exec /usr/bin/xmonad > $HOME/.xmonad.log 2>&1
