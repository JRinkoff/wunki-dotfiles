#!/bin/sh

# X Settings
xrdb -merge .Xresources
xrdb -merge .Xdefaults

# QT must be able to find my theme
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"   

# Turn on numlock
numlockx on &

# Disable PC-Speaker
xset b off &

# Disable power-saving
xset -dpms

# Key repeat
xset r rate 300 60

# Set the left cursor as default
xsetroot -cursor_name left_ptr

# Set dvorak keymapping
setxkbmap -layout us -variant dvorak

# Add keys to SSH agent
eval `ssh-agent -s`

# Start rvxt-unicode server
urxvtd -o -q -f &

# 
# Nice to haves
#

# Clipboard functionality
parcellite &

# Set background
feh --bg-tile ~/dropbox/Dropbox/Pictures/Wallpapers/Solarized\ Tiles.png

# Be nice for my eyes
redshift -l 52:4 -t 6000:4800 -m vidmode &

# Transparency!
xcompmgr -c -t-5 -l-5 -r4.2 -o.80 &

# Dropbox
dropboxd &

#
# Start XMonad
#
exec ck-launch-session xmonad > $HOME/.xmonad.log 2>&1
