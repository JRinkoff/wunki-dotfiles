#!/bin/env sh

# QT must be able to find my theme
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"

# X Settings
xrdb -merge .Xresources
xrdb -merge .Xdefaults

# Disable PC-Speaker
xset b off &

# Disable power-saving
xset -dpms

# Dvorak
setxkbmap -layout us -variant dvorak

# Swap control and caps
setxkbmap -option ctrl:swapcaps

# Swap Super and Meta
setxkbmap -option altwin:swap_alt_win

# Disable screen-saver
xset s off

# Key repeat
xset r rate 300 80

# Set the left cursor as default
xsetroot -cursor_name left_ptr

# Start rvxt-unicode server
urxvtd -o -q -f &

# Hide the mouse cursor
unclutter -idle 3 &

# Clipboard functionality
parcellite -n -d &

# Set background
feh --bg-tile ~/pictures/wallpapers/grey_wash_wall.png

# Thunar
thunar --daemon &

# SSH agent
eval `ssh-agent`

# Emacs
emacs --daemon &

# Authentication agent
# /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

#
# Start window manager
#
exec /usr/local/bin/xmonad > $HOME/.xmonad.log 2>&1
