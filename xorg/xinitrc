#!/bin/sh

# X Settings
xrdb -merge .Xresources
xrdb -merge .Xdefaults

# QT must be able to find my theme
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"   

# Disable PC-Speaker
xset b off &

# Disable power-saving
xset -dpms

# Disable screen-saver
xset s off

# Enable locking of the screen
xss-lock -- i3lock -i ~/dropbox/Pictures/Tiles/irongrip.png -t &

# Key repeat
xset r rate 300 60

# Set the left cursor as default
xsetroot -cursor_name left_ptr

# Set dvorak keymapping
setxkbmap -layout us -variant dvorak
setxkbmap -option ctrl:nocaps 

# Enable iPad charger
/usr/bin/ipad_charge

# Start rvxt-unicode server
urxvtd -o -q -f &

# Hide the mouse cursor
unclutter -idle 3 &

# Clipboard functionality
parcellite -n -d &

# Be nice for my eyes at night
redshift -l 52:4 -t 6000:4800 -m randr &

# Set background
feh --bg-tile ~/dropbox/Pictures/Wallpapers/Patterns/darkdenim3.png

# Thunar
thunar --daemon &

# SSH agent
eval `ssh-agent`

# Emacs
emacs --daemon &

#
# Start window manager
#
# exec dbus-launch i3 -V >> $HOME/.i3.log 2>&1
exec dbus-launch xmonad > $HOME/.xmonad.log 2>&1
