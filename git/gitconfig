[user]
    name = Petar Radosevic
    email = petar@wunki.org
[color]
    status = auto
    diff = auto
    branch = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    cm = !git commit -m
    co = checkout
    cob = checkout -b
    up = pull --rebase --prune
    pl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    root = rev-parse --show-toplevel
[core]
    excludesfile = ~/.gitignore
[web]
    browser = firefox
[push]
    default = matching
[hub]
	protocol = https
